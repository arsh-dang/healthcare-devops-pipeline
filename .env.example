# Healthcare Application Environment Variables
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
PORT=5000
REACT_APP_VERSION=1.0.0

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=admin
MONGODB_PASSWORD=securepassword123
MONGODB_DATABASE=healthcare-app
MONGODB_URI=mongodb://admin:securepassword123@localhost:27017/healthcare-app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# API Configuration
API_BASE_URL=http://localhost:5001/api
FRONTEND_URL=http://localhost:3000

# CI/CD Environment Variables (for Jenkins/GitHub Actions)
CI_API_BASE_URL=http://host.docker.internal:5001/api
CI_FRONTEND_URL=http://host.docker.internal:3000

# Datadog APM (Optional - set to 'true' to enable)
DD_TRACE_ENABLED=false
DD_SERVICE=healthcare-backend
DD_ENV=development

# Datadog RUM (Frontend monitoring)
DD_RUM_ENABLED=false
DD_RUM_APPLICATION_ID=your-rum-app-id
DD_RUM_CLIENT_TOKEN=your-rum-client-token

# Datadog API Key (for infrastructure monitoring)
DD_API_KEY=your-datadog-api-key

# Docker Configuration
DOCKER_REGISTRY=docker.io
DOCKER_REPO=yourusername/healthcare-app

# Kubernetes Configuration
KUBE_NAMESPACE=healthcare-staging
KUBE_CONFIG_PATH=~/.kube/config

# Terraform Configuration
TF_VAR_environment=staging
TF_VAR_app_version=latest
TF_VAR_enable_datadog=false
TF_VAR_datadog_api_key=

# Security Scanning
TRIVY_SEVERITY=HIGH,CRITICAL
DEPENDENCY_CHECK_FORMAT=JSON,HTML

# Test Configuration
TEST_RESULTS_DIR=test-results
COVERAGE_DIR=coverage

# Build Configuration
BUILD_NUMBER=latest
GIT_COMMIT=unknown
