# Example Terraform variables file for production deployment
# Copy this to terraform.tfvars and customize for your environment

# Environment configuration
environment = "production"
app_version = "v1.2.3"

# Docker images
frontend_image = "your-registry/healthcare-app-frontend:v1.2.3"
backend_image = "your-registry/healthcare-app-backend:v1.2.3"

# MongoDB Configuration (HD-grade approach)
# Option 1: Use a known password (recommended for production)
mongodb_root_password = "YourSecurePassword123!"

# Option 2: Leave empty for auto-generation (less predictable)
# mongodb_root_password = ""

# Monitoring
enable_monitoring = true
enable_datadog = true
datadog_api_key = "your-datadog-api-key"

# Resource scaling for production
replica_count = {
  frontend = 3
  backend = 5
}

# SMTP Email Configuration (REQUIRED for alerts)
smtp_server = "smtp.gmail.com"
smtp_port = "587"
smtp_username = "your-email@gmail.com"  # Replace with your Gmail
smtp_password = "your-app-password"     # Generate app password in Gmail settings
smtp_from_email = "alerts@healthcare.company.com"

# Alert Email Recipients
alert_email_critical = "critical-alerts@healthcare.company.com"
alert_email_warning = "alerts@healthcare.company.com"
alert_email_team = "team@healthcare.company.com"

# Slack Configuration (OPTIONAL - leave as default if not using Slack)
slack_webhook_critical = "https://hooks.slack.com/services/YOUR/CRITICAL/WEBHOOK"
slack_webhook_warning = "https://hooks.slack.com/services/YOUR/WARNING/WEBHOOK"
slack_channel_critical = "#healthcare-critical"
slack_channel_warning = "#healthcare-alerts"
